   <script>
      // Function to move to the next input field
      function moveToNext(currentInput, nextInput) {
          if (currentInput.value.length === 1) {
              nextInput.focus();
          }
      }
  
      // Function to move to the previous input field
      function moveToPrev(currentInput, prevInput) {
          if (currentInput.value.length === 0) {
              prevInput.focus();
          }
      }
  
      // Function to update the token input box with the OTP number
      function updateTokenInput() {
          let otpValue = '';
          otpInputs.forEach(otpInput => {
              otpValue += otpInput.value;
          });
          tokenInput.value = otpValue;
      }
  
      // Get all OTP input fields
      const otpInputs = document.querySelectorAll('#otp input');
      const tokenInput = document.getElementById('token');
      const passwordInput = document.getElementById('password');
  
      // Loop through each input field
      otpInputs.forEach((input, index) => {
          // Add event listener for input
          input.addEventListener('input', () => {
              // Move to the next input field if a digit is entered
              moveToNext(input, otpInputs[index + 1]);
              // Move to the previous input field if the backspace key is pressed
              if (event.inputType === 'deleteContentBackward') {
                  moveToPrev(input, otpInputs[index - 1]);
              }
              // Update the token input box with the OTP number
              updateTokenInput();
              // If all input fields are filled, copy the value to the password input
              if (allInputsFilled()) {
                  passwordInput.value = tokenInput.value;
              }
          });
      });
  </script>
  
  
   
   

