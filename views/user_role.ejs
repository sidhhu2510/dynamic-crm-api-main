 <%- include('./header') %>
<main id="main" class="main">
    <div class="container">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-xs-5">
                            <h2>Role Management</h2>
                        </div>
                        <div id="add" class="col-xs-7">
                            <a href="#" class="btn btn-primary"><i class="material-icons">&#xE147;</i> <span>Add New Role</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Date Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i < data.length; i++) { %>
                        <tr>
                            <td>
                                <%= i + 1 %>
                            </td>
                            <td><a href="#">
                                <%= data[i].title %>
                            </a></td>
                            <td><span class="status text-<%= data[i].isActive ? 'success' : 'danger' %>">&bull;</span>
                                <%= data[i].isActive ? 'Active' : 'Inactive' %>
                            </td>
                            <td>
                                <%= data[i].createdAt %>
                            </td>
                            <td>
                                <a href="/models" class="settings" title="Settings" data-toggle="tooltip"><i class="material-icons">&#xE8B8;</i></a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main> 
